<div class="content-wrapper buffer-both text-center">
  <%= content_tag(:div, content_tag(:h2, t('.our_users'), class: 'title-medium'), class: 'buffer-both') %>

  <% @users.each do |user| %>
      <div class="users-list-item">
        <div class="user-image-div user-image-div-small">
          <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
        </div>
      </div>
  <% end %>

  <div class="question-text text-lead">
    <% @hashtags.each do |hashtag| %>
      <%= link_to "##{hashtag.text}", hashtag_path(hashtag.text) %>
    <% end %>
  </div>
</div>
